{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "outDir": "./dist",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "moduleDetection": "force",
        "skipLibCheck": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "resolveJsonModule": true,
        "allowJs": true,
        "baseUrl": ".", // Add this line
        "rootDirs": [
            ".",
            "src"
        ] // Add this line instead of rootDir
    },
    "include": [
        "src/types/**/*.d.ts",
        "src/**/*.ts",
        "./*.ts" // This will include TS files in the root directory
    ]
}