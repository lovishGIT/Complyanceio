{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
    },
    "include": [
        "src/**/*.d.ts",
        "./**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}